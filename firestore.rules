
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Logged-in users can read and write to the companies collection.
    // Write is needed to update statistics like average CGPA.
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    // Logged-in users can read and create experiences.
    // They cannot update or delete them after submission.
    match /experiences/{experienceId} {
      allow read, create: if request.auth != null;
    }

    // Users can create, read, and update their OWN user document.
    // This is important for sign-up and profile updates.
    match /users/{userId} {
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
