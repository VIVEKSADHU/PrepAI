rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read company data and experiences.
    match /companies/{companyId} {
      allow read: if request.auth != null;
      // Allow logged-in users to create/update company data when submitting an experience.
      allow write: if request.auth != null;
    }

    match /experiences/{experienceId} {
      allow read: if request.auth != null;
      // Allow logged-in users to create new experiences.
      allow create: if request.auth != null;
    }

    // Allow users to create and update their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
