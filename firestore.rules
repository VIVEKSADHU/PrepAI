
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can read company and experience data.
    match /companies/{companyId} {
      allow read: if true;
      // Only authenticated users can trigger company data updates.
      allow write: if request.auth != null;
    }

    match /experiences/{experienceId} {
      allow read: if true;
      // Only authenticated users can create new experiences.
      allow create: if request.auth != null;
    }

    // A user can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
