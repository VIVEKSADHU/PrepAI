
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own profile data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Anyone can read experiences, but only logged-in users can create them.
    match /experiences/{experienceId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Anyone can read company data. 
    // Writes are restricted to authenticated users (e.g., for updating stats via server actions).
    match /companies/{companyName} {
       allow read: if true;
       allow write: if request.auth != null;
    }
  }
}
