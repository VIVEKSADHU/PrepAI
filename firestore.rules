rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Experiences can be read by any authenticated user.
    // An experience can only be created by the user it belongs to.
    match /experiences/{experienceId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    // Companies can be read by any authenticated user.
    // They can be created or updated by any authenticated user to allow
    // for updating company-wide statistics.
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
